							dialect=mysql
							reasonable=true
						</value>
					</property>
				</bean>
			</array>
		</property> -->
	</bean>

	<!-- 自动扫描映射器 -->
	<bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
		<property name="basePackage"
			value="com.template.web.*.mapper,com.template.common.mybatis.mapper" />
	</bean>

